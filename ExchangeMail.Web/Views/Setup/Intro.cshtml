@{
    ViewData["Title"] = "Welcome - Intro";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm text-center">
                <div class="card-body py-5">
                    <h1 class="display-4 text-primary mb-4">Welcome to Caduceus</h1>
                    <p class="lead mb-4">
                        Thank you for choosing Caduceus as your private email server.
                        <br />
                        We'll guide you through a quick setup process to get everything running smoothly.
                    </p>

                    <div class="d-flex justify-content-center mb-4 align-items-center flex-wrap">
                        <div class="badge bg-primary text-white p-2 m-1">
                            <i class="bi bi-1-circle-fill"></i> Introduction
                        </div>
                        <div class="mx-2 text-body-secondary d-none d-md-block">&rarr;</div>
                        <div class="badge bg-body-secondary text-body-secondary border p-2 m-1">2. Configuration</div>
                        <div class="mx-2 text-body-secondary d-none d-md-block">&rarr;</div>
                        <div class="badge bg-body-secondary text-body-secondary border p-2 m-1">3. Admin Account</div>
                        <div class="mx-2 text-body-secondary d-none d-md-block">&rarr;</div>
                        <div class="badge bg-body-secondary text-body-secondary border p-2 m-1">4. Complete</div>
                    </div>

                    <a asp-action="Index" class="btn btn-primary btn-lg px-5">Get Started</a>

                    <div class="mt-4 text-muted small">
                        Step 1 of 4
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
