@using ExchangeMail.Core.Services
@inject IConfigurationService ConfigurationService
@{
    var heartbeat = await ConfigurationService.GetServerHeartbeatAsync();
    bool isOnline = heartbeat.HasValue && heartbeat.Value > DateTime.UtcNow.AddMinutes(-2);
    var statusColor = isOnline ? "text-success" : "text-danger";
    var statusTitle = isOnline ? "Server Online" : "Server Offline";
    var lastSeen = heartbeat.HasValue ? $"Last seen: {heartbeat.Value.ToLocalTime():HH:mm:ss}" : "Never seen";

    var username = Context.Session.GetString("Username");
    var enableAnimations = false;
    if (!string.IsNullOrEmpty(username))
    {
        using (var scope = Context.RequestServices.CreateScope())
        {
            var userRepository = scope.ServiceProvider.GetRequiredService<IUserRepository>();
            enableAnimations = await userRepository.GetAnimationsAsync(username);
        }
    }
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Caduceus</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExchangeMail.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>

<body class="overflow-hidden @(enableAnimations ? "enable-animations" : "")">
    <div class="container-fluid h-100 p-0 d-flex flex-column">
        <!-- Top Bar (Minimal) -->
        <div class="d-flex align-items-center justify-content-between px-3 py-2 border-bottom bg-body-tertiary"
            style="height: 48px; z-index: 1030; position: relative;">
            <div class="d-flex align-items-center">
                <button class="btn btn-link text-body p-0 me-3 d-md-none" id="sidebarToggle">
                    <i class="bi bi-list fs-4"></i>
                </button>
                <a class="navbar-brand me-3" asp-area="" asp-controller="Mail" asp-action="Index">
                    <i class="bi bi-envelope-fill text-primary"></i> Caduceus Web App
                </a>
            </div>
            <div class="d-flex align-items-center">
                <div class="me-3" title="@statusTitle - @lastSeen" data-bs-toggle="tooltip" data-bs-placement="bottom">
                    <i class="bi bi-hdd-network-fill @statusColor"></i>
                </div>
                <div class="form-check form-switch me-3">
                    <input class="form-check-input" type="checkbox" id="darkModeToggle">
                    <label class="form-check-label" for="darkModeToggle">
                        <i class="bi bi-moon-stars-fill"></i>
                    </label>
                </div>
                <div class="dropdown">
                    <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle fs-5"></i>
                    </a>
                    <ul class="dropdown-menu text-small shadow" style="">
                        <li><span class="dropdown-item-text fw-bold">@Context.Session.GetString("Username")</span></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Admin</a></li>
                        <li><a class="dropdown-item" asp-controller="Contacts" asp-action="Index">Contacts</a></li>
                        <li><a class="dropdown-item" asp-controller="Mail" asp-action="ImportPst">Import PST</a></li>
                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal"
                                data-bs-target="#aboutModal">About</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" asp-controller="Mail" asp-action="Logout">Sign out</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main Content (Full Height) -->
        <main role="main" class="flex-grow-1 overflow-hidden">
            @RenderBody()
        </main>
    </div>

    <!-- About Modal -->
    <div class="modal fade" id="aboutModal" tabindex="-1" aria-labelledby="aboutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="aboutModalLabel">About ExchangeMail</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <i class="bi bi-envelope-fill text-primary fs-1 mb-3"></i>
                    <h4>Caduceus</h4>
                    <p class="text-muted">Version 1.0.0</p>
                    <p>A modern, secure, and efficient email client for the ExchangeMail server.</p>
                    <p class="mb-0"><img src="~/images/scotlandFlag.png" alt="Scotland Flag"
                            style="height: 20px; width: auto;" class="me-1"> Made in Scotland</p>
                    <hr />
                    <p class="small text-muted mb-0">&copy; @DateTime.Now.Year ExchangeMail. All rights reserved.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Notification Toast Container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true"
            style="cursor: pointer;">
            <div class="toast-header">
                <i class="bi bi-envelope-fill text-primary me-2"></i>
                <strong class="me-auto">New Email</strong>
                <small>Just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toastBody">
                You have a new message.
            </div>
        </div>
    </div>

    <partial name="_GlobalModals" />
    <partial name="_SettingsModal" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Keep session alive
        setInterval(function () {
            fetch('/Home/KeepAlive', { method: 'POST' });
        }, 600000); // Ping every 10 minutes

        // SignalR Connection
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/mailHub")
            .build();

        connection.on("ReceiveMessage", function (user, message) {
            const toastLiveExample = document.getElementById('liveToast');
            const toastBody = document.getElementById('toastBody');
            toastBody.textContent = `From: ${user} - ${message}`;

            // Click to refresh/go to inbox
            toastLiveExample.onclick = function (e) {
                // Ignore if clicking the close button
                if (!e.target.classList.contains('btn-close')) {
                    window.location.href = '/Mail/Index';
                }
            };

            const toastBootstrap = bootstrap.Toast.getOrCreateInstance(toastLiveExample);
            toastBootstrap.show();

            // Dispatch event for other views to handle (e.g., refreshing the list)
            document.dispatchEvent(new CustomEvent('newMailReceived', { detail: { user: user, message: message } }));
        });

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
    </script>
</body>

</html>
