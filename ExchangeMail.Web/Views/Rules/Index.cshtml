@model IEnumerable<ExchangeMail.Core.Data.Entities.MailRuleEntity>

@{
    ViewData["Title"] = "Mail Rules";
    var folders = ViewBag.Folders as List<string>;
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
        <h5 class="m-0">Mail Rules</h5>
        <a asp-action="Editor" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-lg me-1"></i>Create New Rule
        </a>
    </div>

    <div class="row p-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Existing Rules
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover m-0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Priority</th>
                                <th>Conditions</th>
                                <th>Actions</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rule in Model)
                            {
                                <tr>
                                    <td>@rule.Name</td>
                                    <td>@rule.Priority</td>
                                    <td>
                                        @rule.Conditions.Count conditions
                                    </td>
                                    <td>
                                        @rule.Actions.Count actions
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Editor" asp-route-id="@rule.Id"
                                        class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                                        <form asp-action="Delete" asp-route-id="@rule.Id" method="post" class="d-inline"
                                        onsubmit="return confirm('Are you sure?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (!Model.Any())
                    {
                        <div class="p-3 text-center text-muted">No rules defined.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
