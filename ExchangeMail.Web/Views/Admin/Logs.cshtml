@model IEnumerable<ExchangeMail.Core.Data.Entities.LogEntity>
@{
    ViewData["Title"] = "System Logs";
    Layout = "_Layout";
    int currentPage = ViewBag.Page;
    int totalPages = ViewBag.TotalPages;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">System Logs</h1>
            <p class="text-muted small mb-0">View system events and errors.</p>
        </div>
        <div>
            <form asp-action="ClearLogs" method="post" id="clearLogsForm">
                <button type="button" class="btn btn-danger" onclick="confirmClearLogs()">
                    <i class="bi bi-trash me-2"></i>Clear Logs
                </button>
            </form>
        </div>
    </div>

    <script>
        async function confirmClearLogs() {
            if (await showModalConfirm('Are you sure you want to clear all logs?')) {
                document.getElementById('clearLogsForm').submit();
            }
        }
    </script>
</div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4" style="width: 180px;">Date</th>
                        <th style="width: 100px;">Level</th>
                        <th style="width: 120px;">Source</th>
                        <th>Message</th>
                        <th style="width: 50px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td class="ps-4 text-nowrap">@log.Date.ToString("g")</td>
                            <td>
                                @if (log.Level == "Error")
                                {
                                    <span class="badge bg-danger">Error</span>
                                }
                                else if (log.Level == "Warning")
                                {
                                    <span class="badge bg-warning text-dark">Warning</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">Info</span>
                                }
                            </td>
                            <td><span class="badge bg-secondary">@log.Source</span></td>
                            <td>
                                <div class="text-break">@log.Message</div>
                                @if (!string.IsNullOrEmpty(log.Exception))
                                {
                                    <div class="mt-1">
                                        <a class="btn btn-sm btn-link p-0 text-danger" data-bs-toggle="collapse"
                                    href="#exception-@log.Id" role="button" aria-expanded="false"
                                    aria-controls="exception-@log.Id">
                                            View Exception Details
                                        </a>
                                        <div class="collapse mt-2" id="exception-@log.Id">
                                            <div class="card card-body bg-light small text-break font-monospace">
                                                @log.Exception
                                            </div>
                                        </div>
                                    </div>
                                }
                            </td>
                            <td></td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-journal-check display-4 mb-3 d-block"></i>
                                No logs found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (totalPages > 1)
    {
        <div class="card-footer bg-white border-top-0 py-3">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Logs" asp-route-page="@(currentPage - 1)">Previous</a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(currentPage == i ? "active" : "")">
                            <a class="page-link" asp-action="Logs" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Logs" asp-route-page="@(currentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>
</div>
