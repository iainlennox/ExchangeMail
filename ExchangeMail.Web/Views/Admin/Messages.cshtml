@using MimeKit
@model IEnumerable<MimeMessage>
@{
    ViewData["Title"] = "Message Queue";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="bi bi-envelope-paper me-2"></i>Message Queue</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Date</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Subject</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model)
                        {
                            <tr>
                                <td class="ps-4 text-nowrap">@message.Date.ToString("g")</td>
                                <td>@message.From</td>
                                <td>@message.To</td>
                                <td>
                                    @if (string.IsNullOrEmpty(message.Subject))
                                    {
                                        <span class="text-muted fst-italic">(No Subject)</span>
                                    }
                                    else
                                    {
                                        @message.Subject
                                    }
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    No messages found in the queue.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @if (ViewBag.TotalPages > 1)
        {
            <div class="card-footer bg-white py-3">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Messages" asp-route-page="@(ViewBag.Page - 1)">Previous</a>
                        </li>
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                                <a class="page-link" asp-action="Messages" asp-route-page="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(ViewBag.Page == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Messages" asp-route-page="@(ViewBag.Page + 1)">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
