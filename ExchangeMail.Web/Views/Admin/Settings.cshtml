@{
    ViewData["Title"] = "Settings";
}

<div class="container-lg py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-body-tertiary py-3">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-gear-fill me-2"></i>Server Settings</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Settings" method="post">
                        <div class="mb-4">
                            <label for="domain" class="form-label fw-medium">Email Domain</label>
                            <div class="input-group">
                                <span class="input-group-text bg-body-tertiary"><i class="bi bi-globe"></i></span>
                                <input type="text" class="form-control" id="domain" name="domain"
                                    value="@ViewBag.Domain" placeholder="e.g. example.com" required>
                            </div>
                            <div class="form-text text-muted small">This domain will be appended to all new user
                                accounts (e.g., user@domain.com).</div>
                        </div>

                        <div class="mb-4">
                            <label for="port" class="form-label fw-medium">Internal SMTP Port</label>
                            <div class="input-group">
                                <span class="input-group-text bg-body-tertiary"><i class="bi bi-hdd-network"></i></span>
                                <input type="number" class="form-control" id="port" name="port"
                                    value="@ViewBag.Port" placeholder="e.g. 2525" required>
                            </div>
                            <div class="form-text text-muted small">The port the internal SMTP server will listen on. Default is 2525. Restart required.</div>
                        </div>

                        <hr class="my-4">
                        <h6 class="fw-bold text-primary mb-3"><i class="bi bi-cloud-arrow-up-fill me-2"></i>Upstream SMTP (Relay)</h6>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label for="smtpHost" class="form-label fw-medium">SMTP Host</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-body-tertiary"><i class="bi bi-server"></i></span>
                                    <input type="text" class="form-control" id="smtpHost" name="smtpHost"
                                        value="@ViewBag.SmtpHost" placeholder="e.g. smtp.sendgrid.net">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label for="smtpPort" class="form-label fw-medium">Port</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-body-tertiary"><i class="bi bi-hdd-network"></i></span>
                                    <input type="number" class="form-control" id="smtpPort" name="smtpPort"
                                        value="@ViewBag.SmtpPort" placeholder="587">
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info d-flex align-items-center mb-3" role="alert">
                            <i class="bi bi-info-circle-fill flex-shrink-0 me-2"></i>
                            <div class="small">
                                <strong>SendGrid Users:</strong> Set Username to <code>apikey</code> and Password to your API Key.
                                <br>Use Port <strong>587</strong> for TLS (recommended) or <strong>465</strong> for SSL.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="smtpUsername" class="form-label fw-medium">SMTP Username</label>
                            <div class="input-group">
                                <span class="input-group-text bg-body-tertiary"><i class="bi bi-person"></i></span>
                                <input type="text" class="form-control" id="smtpUsername" name="smtpUsername"
                                    value="@ViewBag.SmtpUsername" placeholder="Username">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="smtpPassword" class="form-label fw-medium">SMTP Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-body-tertiary"><i class="bi bi-key"></i></span>
                                <input type="password" class="form-control" id="smtpPassword" name="smtpPassword"
                                    value="@ViewBag.SmtpPassword" placeholder="Password">
                            </div>
                        </div>

                        <div class="mb-4 form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="smtpEnableSsl" name="smtpEnableSsl" value="true" @(ViewBag.SmtpEnableSsl == true ? "checked" : "")>
                            <label class="form-check-label" for="smtpEnableSsl">Enable SSL/TLS</label>
                        </div>

                        <hr class="my-4">
                        <h6 class="fw-bold text-primary mb-3"><i class="bi bi-diagram-3-fill me-2"></i>Routing</h6>

                        <div class="mb-4 form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="internalRoutingEnabled" name="internalRoutingEnabled" value="true" @(ViewBag.InternalRoutingEnabled == true ? "checked" : "")>
                            <label class="form-check-label" for="internalRoutingEnabled">Enable Smart Internal Routing</label>
                            <div class="form-text text-muted small">When enabled, emails sent to <strong>@ViewBag.Domain</strong> will be routed internally, bypassing the upstream SMTP server.</div>
                        </div>

                        <hr class="my-4">
                        <h6 class="fw-bold text-danger mb-3"><i class="bi bi-exclamation-triangle-fill me-2"></i>Danger Zone</h6>
                        
                        <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
                            <i class="bi bi-exclamation-octagon-fill flex-shrink-0 me-2"></i>
                            <div class="small">
                                <strong>Reset Database:</strong> This will delete all messages, folders, contacts, and users. Configuration will be preserved.
                            </div>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <a asp-action="ResetDatabase" class="btn btn-outline-danger">
                                <i class="bi bi-trash3 me-2"></i>Reset Database...
                            </a>
                        </div>

                        <hr class="my-4">

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
