@model IEnumerable<ExchangeMail.Core.Data.Entities.ContactEntity>

<div class="d-flex flex-column h-100">
    <div class="p-2 border-bottom d-flex gap-2">
        <form asp-action="Index" method="get" class="input-group input-group-sm flex-grow-1">
            <span class="input-group-text bg-transparent border-end-0"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control border-start-0" placeholder="Search contacts" name="searchString"
                value="@ViewBag.SearchString">
        </form>
        <a asp-action="Create" class="btn btn-sm btn-primary" title="New Contact">
            <i class="bi bi-plus-lg"></i>
        </a>
    </div>

    <div class="flex-grow-1 overflow-auto">
        @if (!Model.Any())
        {
                <div class="text-center p-4 text-muted">
                    <i class="bi bi-person-x fs-1 d-block mb-2"></i>
                    <p>No contacts found.</p>
                    <a asp-action="Create" class="btn btn-sm btn-outline-primary mt-2">
                        <i class="bi bi-plus-lg me-1"></i>Create Contact
                    </a>
                </div>
        }
        else
        {
            @foreach (var contact in Model)
            {
                        <div class="mail-list-item" onclick="loadContactDetails(@contact.Id, this)" style="cursor: pointer;">
                            <div class="d-flex justify-content-between align-items-baseline">
                                <span class="sender text-truncate fw-bold">@contact.Name</span>
                            </div>
                            <div class="subject text-truncate text-muted small">@contact.Email</div>
                        </div>
            }
        }
    </div>
</div>
