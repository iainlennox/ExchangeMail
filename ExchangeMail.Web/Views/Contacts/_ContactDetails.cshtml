@model ExchangeMail.Core.Data.Entities.ContactEntity

@if (Model == null)
{
    <div class="d-flex flex-column align-items-center justify-content-center h-100 text-muted">
        <i class="bi bi-person-lines-fill fs-1 mb-3"></i>
        <p>Select a contact to view details</p>
    </div>
}
else
{
    <div class="d-flex flex-column h-100">
        <!-- Toolbar -->
    <div class="border-bottom p-2 mb-3 bg-body-tertiary d-flex justify-content-between align-items-center sticky-top">
            <div class="d-flex align-items-center">
                <button class="btn btn-sm btn-link text-body me-2 d-md-none" onclick="showList()">
                    <i class="bi bi-arrow-left fs-5"></i>
                </button>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id"
                    class="btn btn-sm btn-outline-secondary border-0 text-body fw-semibold">
                        <i class="bi bi-pencil me-1 text-primary"></i> Edit
                    </a>
                    <a asp-controller="Mail" asp-action="Compose" asp-route-to="@Model.Email"
                    class="btn btn-sm btn-outline-secondary border-0 text-body fw-semibold">
                        <i class="bi bi-envelope me-1 text-primary"></i> Email
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id"
                    class="btn btn-sm btn-outline-secondary border-0 text-body hover-danger">
                        <i class="bi bi-trash text-danger"></i> Delete
                    </a>
                </div>
            </div>
        </div>

        <!-- Header -->
    <div class="px-4 pb-3 mb-2 border-bottom">
            <div class="d-flex align-items-center">
                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3 flex-shrink-0"
                style="width: 64px; height: 64px; font-size: 2rem; text-transform: uppercase;">
                    @Model.Name[0]
                </div>
                <div>
                    <h3 class="mb-0 fw-normal">@Model.Name</h3>
                    <div class="text-muted">@Model.Email</div>
                </div>
            </div>
        </div>

        <!-- Body -->
    <div class="flex-grow-1 overflow-auto px-4">
            <dl class="row">
                <dt class="col-sm-3 text-muted">Phone</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <a href="tel:@Model.PhoneNumber" class="text-decoration-none text-body">@Model.PhoneNumber</a>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Not provided</span>
                    }
                </dd>

                <dt class="col-sm-3 text-muted">Address</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        @Model.Address
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Not provided</span>
                    }
                </dd>

                <dt class="col-sm-3 text-muted">Notes</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <p class="mb-0 text-break" style="white-space: pre-wrap;">@Model.Notes</p>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">No notes</span>
                    }
                </dd>
            </dl>
        </div>
    </div>
}
