@model ExchangeMail.Core.Data.Entities.ContactEntity

@{
    ViewData["Title"] = "Contact Details";
}

<div class="container-lg py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-body-tertiary d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-person-lines-fill me-2"></i>Contact Details
                    </h5>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm me-2">
                            <i class="bi bi-pencil me-1"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">Name</dt>
                        <dd class="col-sm-9 fw-medium">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3 text-muted">Email</dt>
                        <dd class="col-sm-9">
                            <a href="mailto:@Model.Email" class="text-decoration-none">@Html.DisplayFor(model =>
                                model.Email)</a>
                        </dd>

                        <dt class="col-sm-3 text-muted">Phone</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                <a href="tel:@Model.PhoneNumber"
                                class="text-decoration-none text-body">@Html.DisplayFor(model => model.PhoneNumber)</a>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Not provided</span>
                            }
                        </dd>

                        <dt class="col-sm-3 text-muted">Address</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Address))
                            {
                                @Html.DisplayFor(model => model.Address)
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Not provided</span>
                            }
                        </dd>

                        <dt class="col-sm-3 text-muted">Notes</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <p class="mb-0 text-break" style="white-space: pre-wrap;">@Html.DisplayFor(model =>
                                model.Notes)</p>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No notes</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
